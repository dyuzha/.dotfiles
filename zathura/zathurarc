# place in ~/.config/zathura/
# Zathura configuration file
# See man `man zathurarc'
#-----------------------------

# enable clipboard
set selection-clipboard clipboard

# See man `man zathurarc'
map r reload
map p print
map i recolor
map J zoom out
map K zoom in
map R rotate
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

# Open document in fit-width mode by default
set window-height 1000
# set window-width 1000
set adjust-open "best-fit"

# scrollbars
set show-scrollbars "true"
set window-title-basename "true"
set window-title-page "true"

set scroll-wrap "true"
set continuous-hist-save "true"
# set zoom-center "true"
# set vertical-center "true"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# zathurarc-dark
set font "inconsolata 18"
#set default-bg "#000000" #00
set default-fg "#F7F7F6" #01

set notification-error-bg       "#586e75" # base01  # seem not work
set notification-error-fg       "#dc322f" # red
set notification-warning-bg     "#586e75" # base01
set notification-warning-fg     "#dc322f" # red
set notification-bg             "#586e75" # base01
set notification-fg             "#b58900" # yellow

#set completion-group-bg         "#002b36" # base03
#set completion-group-fg         "#839496" # base0
#set completion-bg               "#073642" # base02
#set completion-fg               "#93a1a1" # base1
#set completion-highlight-bg     "#586e75" # base01
#set completion-highlight-fg     "#eee8d5" # base2

# Recolor book content's color
set recolor "true"
set recolor-lightcolor "#1f1f1f" #00
set recolor-darkcolor "#dcdccc" #06
set recolor-reverse-video "true"
set recolor-keephue "true"

# Define the color in index mode
set index-bg                   "#2E2E2E" # base02
set index-fg                   "#93a1a1" # base1
set index-active-bg             "#586e75" # base01
set index-active-fg             "#eee8d5" # base2

set inputbar-bg                 "#586e75" # base01
set inputbar-fg                 "#eee8d5" # base2

set statusbar-bg                "#073642" # base02
set statusbar-fg                "#93a1a1" # base1

set highlight-color             "rgba(255, 207, 223, 0.5)"
set highlight-active-color      "rgba(120, 219, 226, 0.5)"

set default-bg                  "#00" # base02
set render-loading              true
set render-loading-fg           "#23wf00" # base02
set render-loading-bg           "#00w442" # base02
